<p id="notice"><%= notice %></p>

<h1><center>

  <%= @rental.name %>
</center></h1>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@rental.picture_url, width: 400) if @rental.picture.present? %>
</p>

<p>
  <strong>Description:</strong>
  <%= @rental.description %>
</p>

<p>
<strong>City:</strong>
<%= @rental.city %>
</p>
<strong> Email: </strong><button onclick="myFunction()">Click me</button> <p id="demo"></p>



<% if admin_signed_in? || owner_signed_in? %>
<%= link_to 'Edit', edit_rental_path(@rental) %> |
<%end%>
<%= link_to 'Back', rentals_path %>

<p><%= link_to 'Destroy', @rental, method: :delete, data: { confirm: 'Are you sure?' } %></p> 

<script>
function myFunction() {
  document.getElementById("demo").innerHTML = "<%= @rental.owner.try(:email) %>";
}
</script>
